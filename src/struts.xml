<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>

<constant name="struts.enable.DynamicMethodInvocation" value="true" />
    <constant name="struts.devMode" value="false" />
	<constant name="struts.il8n.encoding" value="UTF-8"></constant>
    <package name="default"  extends="json-default">
		<action name="register" class="customerAction" method="register">
			<result type="json">
				<param name="root">customer</param>
			</result>
		</action>
		
		<action name="login" class="customerAction" method="login">
			<result type="json">
				<param name="root">jsonobject</param>
			
			</result>
		</action>
		
		<action name="informalter" class="customerAction" method="informalter">
			<result type="json">
				<param name="root">customer</param>
			
			</result>
		</action>
		
		<action name="sessionask" class="shop.customer.action.SessionAction" method="send">
			<result type="json">
				<param name="root">customer</param>
			
			</result>
		</action>
		
		<action name="writeoff" class="shop.customer.action.SessionAction" method="logout">
			<result type="json" name="success">
				<param name="contentType">text/html</param>
			
			</result>
		</action>
    </package>
	
	<package name="struts2" extends="json-default">
        <action name="fileUploadAction" class="com.ajaxfile.action.FileAction">
            <result type="json" name="success">
                <param name="contentType">
                    text/html
                </param>
            </result>
            <result type="json" name="error">
                <param name="contentType">
                    text/html
                </param>
            </result>
        </action>
    </package>
</struts>    
