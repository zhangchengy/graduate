<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 <hibernate-mapping>
     <class name="shop.customer.domain.Customer" table="s_customer">
         <id name="cid" column="cid" type="integer">
             <generator class="native"></generator>
         </id>
         <property name="cname" length="10">  
             <column name="cname"></column>
         </property>
         <property name="cpassword"  length="16" type="integer">
             <column name="cpassword"></column>
         </property>
         <property name="birthday"  >
             <column name="birthday"></column>
         </property>
     </class>
 </hibernate-mapping>